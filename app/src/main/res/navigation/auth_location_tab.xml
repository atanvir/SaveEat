<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_location_tab"
    app:startDestination="@id/locationMapFragment">

    <fragment
        android:id="@+id/locationMapFragment"
        android:name="com.saveeat.ui.fragment.main.location.Map.LocationMapFragment"
        android:label="LocationMapFragment"
        tools:layout="@layout/fragment_location_map"
        >
        <action
            android:id="@+id/action_locationMapFragment_to_locationListFragment"
            app:destination="@id/locationListFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationListFragment"
        android:name="com.saveeat.ui.fragment.main.location.List.LocationListFragment"
        android:label="LocationListFragment"
        tools:layout="@layout/fragment_location_list"
        >
        <action
            android:id="@+id/action_locationListFragment_to_locationMapFragment"
            app:destination="@id/locationMapFragment" />
    </fragment>
</navigation>