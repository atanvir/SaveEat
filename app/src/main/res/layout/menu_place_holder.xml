<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@color/sv_location_grey"
            android:textColor="@color/black"
            android:textSize="@dimen/dime_13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/drawable_round_corner"
            android:backgroundTint="@color/app_theme"
            app:layout_constraintEnd_toStartOf="@+id/tvLabel2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLabel" />


        <TextView
            android:id="@+id/tvLabel2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:background="@color/sv_location_grey"
            android:textColor="@color/black"
            android:textSize="@dimen/dime_13sp"
            app:layout_constraintStart_toEndOf="@+id/tvLabel"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvLabel3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:background="@color/sv_location_grey"
            android:textColor="@color/black"
            android:textSize="@dimen/dime_13sp"
            app:layout_constraintStart_toEndOf="@+id/tvLabel2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvLabel4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="7dp"
            android:background="@color/sv_location_grey"
            android:textColor="@color/black"
            android:textSize="@dimen/dime_13sp"
            app:layout_constraintStart_toEndOf="@+id/tvLabel3"
            app:layout_constraintTop_toTopOf="parent" />







    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>