<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.saveeat.model.response.saveeat.main.home.RestaurantProductModel" />

        <variable
            name="image"
            type="java.lang.String"
            />

    </data>

<androidx.cardview.widget.CardView
    android:id="@+id/cvMain"
    android:layout_width="@dimen/_235sdp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_7sdp">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView6"
        imageUrl="@{image}"
        progressbar="@{progressBar}"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        />

    <TextView
        android:id="@+id/textView9"
        style="@style/poppin_semi_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@{data.foodName}"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvLeft"
        style="@style/inter_medium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20sp"
        android:layout_marginBottom="17dp"
        android:background="@{data.leftQuantity>0?@drawable/drawable_round_corner:@drawable/drawable_grey_corner}"
        android:backgroundTint="@{data.leftQuantity>0?@color/app_theme:@color/blur_grey}"
        android:elevation="@dimen/_5sdp"
        android:gravity="center"
        android:outlineAmbientShadowColor="@{data.leftQuantity>0?@color/app_theme:@color/grey}"
        android:outlineSpotShadowColor="@{data.leftQuantity>0?@color/app_theme:@color/blur_grey}"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_1sdp"
        android:shadowColor="@color/app_theme"
        android:text="@{data.leftQuantity+` Left`}"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />



</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

</layout>