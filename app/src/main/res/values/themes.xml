<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaveEat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorPrimaryVariant">@color/app_theme</item>
        <item name="colorOnPrimary">@color/app_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_theme</item>
        <item name="colorSecondaryVariant">@color/app_theme</item>
        <item name="colorOnSecondary">@color/app_theme</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="searchViewStyle">@style/SearchViewMy</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
